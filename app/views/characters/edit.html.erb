
<div id="alert_placeholder">
</div>

<h1>Editing character</h1>

<script type="text/javascript">
$(document).ready(function(){ 
    $("#editTabs a").click(function(e){
    	e.preventDefault();
    	$(this).tab('show');
    });
});
</script>

<ul class="nav nav-tabs" id="editTabs">
  <li class="active"><a href="#info">Info</a></li>
  <li><a href="#status">Status</a></li>
  <li><a href="#spells">Spells</a></li>
  <li><a href="#skills">Skills</a></li>
  <li><a href="#equips">Equips</a></li>
  <li><a href="#beasts">Beasts</a></li>
</ul>
<div class="tab-content">
	<div id="info" class="tab-pane fade in active">
		<%= render 'info' %>
	</div>
	<div id="status" class="tab-pane fade">
		<%= render 'status' %>
	</div>
	<div id="spells" class="tab-pane fade">
		<%= render 'spells' %>
	</div>
	<div id="skills" class="tab-pane fade">
		<%= render 'skills' %>
	</div>
	<div id="equips" class="tab-pane fade">
		equips
	</div>
	<div id="beasts" class="tab-pane fade">
		beasts
	</div>
</div>

<%= link_to 'Show', @character %> |
