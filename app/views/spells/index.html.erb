<h1>Listing spells</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Attack</th>
      <th>Range</th>
      <th>Save</th>
      <th>Splevel</th>
      <th>Duration</th>
      <th>Memorized</th>
      <th>Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spells.each do |spell| %>
      <tr>
        <td><%= spell.name %></td>
        <td><%= spell.attack %></td>
        <td><%= spell.range %></td>
        <td><%= spell.saveDC %></td>
        <td><%= spell.splevel %></td>
        <td><%= spell.duration %></td>
        <td><%= spell.memorized %></td>
        <td><%= spell.spType %></td>
        <td><%= link_to 'Show', spell %></td>
        <td><%= link_to 'Edit', edit_spell_path(spell) %></td>
        <td><%= link_to 'Destroy', spell, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

